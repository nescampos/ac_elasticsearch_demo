@model string

@{
    ViewData["Title"] = "AddData";
}

<h2>Add Data to @Model  index</h2>

@using (Html.BeginForm())
{
    <input type="hidden" name="indexName" value="@Model" />
    <div class="row">
        <div class="col-md-3">
            <p>First Name</p>
        </div>
        <div class="col-md-5">
            <input type="text" name="FirstName" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Last Name</p>
        </div>
        <div class="col-md-5">
            <input type="text" name="LastName" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Date Of Birth</p>
        </div>
        <div class="col-md-5">
            <input type="date" name="DateOfBirth" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Role</p>
        </div>
        <div class="col-md-5">
            <input type="text" name="Role" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Department</p>
        </div>
        <div class="col-md-5">
            <input type="text" name="Department" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Years In Role</p>
        </div>
        <div class="col-md-5">
            <input type="number" name="YearsInRole" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Company</p>
        </div>
        <div class="col-md-5">
            <input type="text" name="Company" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-5">
            <input type="submit" value="Add" class="btn btn-success" />
        </div>
    </div>
}